<%- include('../header') %>

<div class="page-wrapper"
    style="background-color: #f8f9fa; max-height: 100%; display: flex; align-items: center; justify-content: center; padding: 40px 15px;">
    
    <div class="card shadow-lg border-0 overflow-hidden" style="min-width: 100%; min-height: 100%; border-radius: 16px;">
        
        <!-- Blog Image -->
        <div class="position-relative" style="display: flex; justify-content: center; ">
            <img src="<%= blog.image %>" alt="<%= blog.title %>" 
                class="img-fluid w-100"
                style="max-height: 700px; max-width: 450px; object-fit: cover; border-top-left-radius: 16px;  border-top-right-radius: 16px; filter: brightness(95%);">
            
            <!-- Category Badge -->
            <span class="badge position-absolute start-0 m-3 px-3 py-2 rounded-pill shadow"
                style="top: 90%; background: linear-gradient(135deg, #7efff4, #7577ff); font-size: 0.8rem; color: #fff;">
                <i class="bi bi-tags"></i> <%= blog.category %>
            </span>
        </div>

        <!-- Blog Content -->
        <div class="card-body text-center p-4" style="justify-content: center; ">
            <!-- Title -->
            <h4 class="fw-bold mb-3" style="color: #222;  ">
                <i class="bi bi-journal-text text-primary"></i> <%= blog.title %>
            </h4>
            <!-- Description -->
            <p class="text-center" style="font-size: 1rem; line-height: 1.6; color:#555; text-align: justify;">
                <%= blog.description %>
            </p>

            <!-- Back Button -->
            <div class="text-center mt-4">
                <a href="/blog/viewBlog" class="btn px-4 py-2 rounded-pill fw-semibold shadow-sm"
                    style="background: linear-gradient(135deg, #43c5ce, #18829d); color: #fff; transition: all 0.3s;">
                    â¬… Back to Blogs
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>