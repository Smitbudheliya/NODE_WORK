<%- include('../header') %>

    <div class="page-wrapper">
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Sub Category Table</h4>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <h5 class="card-title m-0">Sub Category List</h5>
                        </div>

                        <table class="table table-hover table-bordered mt-3">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Id</th>
                                    <th>Image</th>
                                    <th>Category</th>
                                    <th>Sub Category</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% subCategory.map((val, index)=> { %>
                                    <tr>
                                        <td>
                                            <%= index + 1 %>
                                        </td>
                                        <td><img src="<%= val.category.image %>" alt="Sub Category Image" width="50">
                                        </td>
                                        <td>
                                            <%= val.category ? val.category.categoryName : 'N/A' %>
                                        </td>
                                        <td>
                                            <%= val.subcategory %>
                                        </td>
                                        <td>
                                            <a href="/subCategory/editSubCategory/<%= val._id %>"
                                                class="btn btn-sm btn-primary">Edit</a>
                                            <a href="/subCategory/deleteSubCategory/<%= val._id %>"
                                                class="btn btn-sm btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../footer') %>